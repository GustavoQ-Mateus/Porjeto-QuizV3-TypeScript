{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/pages/*": ["src/pages/*"],
            "@/state/*": ["src/state/*"],
            "@/data/*": ["src/data/*"],
            "@/styles/*": ["src/styles/*"],
            "@/utils/*": ["src/utils/*"]
        }
    },
    "include": ["src"],
    "references": []
}